<nav class="navbar w-full px-8 py-4 flex justify-between items-center">
  <a href="/"><img class="h-12" src="/img/heimdall_smaller.png" alt="heimdall logo"></a>
  <button type="button" id="goCurrent" class="btn-primary text-sm">Current Inventory</button>
</nav>

<div class="container mx-auto px-4 py-8">
  <div class="card max-w-6xl mx-auto">
    <div id="table" class="table-editable">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold">New Order</h2>
        <span class="table-add">
          <a href="#!" class="text-green-600 hover:text-green-800">
            <i class="fas fa-plus fa-2x" style="color: #002855" aria-hidden="true"></i>
          </a>
        </span>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Buy/Sell</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Client Name</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Price Per Unit</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <tr data-row-id="0">
              <td class="px-6 py-4 whitespace-nowrap">
                <select id="buy-sell_0" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 buy-sell-select">
                  <option value="" disabled selected hidden>Select</option>
                </select>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <input id="client-name_0" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <select id="sku_0" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 sku-select">
                  <option value="" disabled selected hidden>Select</option>
                </select>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <input type="number" step="1" id="quantity_0" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
              </td>
              <td class="px-6 py-4 whitespace-nowrap font-semibold text-gray-700" id="price-per-unit_0">
                <span class="text-gray-400 italic">Select SKU</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="table-remove">
                  <button type="button" class="btn-secondary text-sm">Remove</button>
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="flex justify-end gap-4 mt-6 pt-6 border-t border-gray-200">
      <button type="button" id="submit-order" class="btn-primary">Submit</button>
      <button type="button" id="close-screen" class="btn-secondary">Close</button>
    </div>
  </div>
</div>

