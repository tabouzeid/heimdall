<nav class="navbar w-full px-8 py-4 flex justify-between items-center">
  <a href="/"><img class="h-12" src="/img/heimdall_smaller.png" alt="heimdall logo"></a>
  <button type="button" id="goCurrent" class="btn-primary text-sm">Current Inventory</button>
</nav>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="card">
      <h2 class="text-3xl font-bold text-center mb-8">New Inventory</h2>
      <form class="newInventory space-y-6">

        <div>
          <label for="sku" class="block text-sm font-medium text-gray-700 mb-2">SKU</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="sku">
        </div>

        <div>
          <label for="productName" class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="productName">
        </div>

        <div>
          <label for="productDescription" class="block text-sm font-medium text-gray-700 mb-2">Product Description</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="productDescription">
        </div>

        <div>
          <label for="cost" class="block text-sm font-medium text-gray-700 mb-2">Cost</label>
          <input type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="cost">
        </div>

        <div>
          <label for="sellPrice" class="block text-sm font-medium text-gray-700 mb-2">Sell Price</label>
          <input type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="sellPrice">
        </div>

        <div>
          <label for="quantity" class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
          <input type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="quantity">
        </div>

        <div style="display: none" id="alert" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="msg"></span>
        </div>
        
        <button type="submit" class="btn-primary w-full">Add Product</button>
      </form>
      
      <div class="mt-6 text-center">
        <p class="text-gray-600">Lookup Supplier Inventory <a href="/add/skuLookup" class="text-blue-600 hover:text-blue-800 underline">here</a></p>
      </div>
    </div>
  </div>
</div>

<script src="/js/newInventory.js"></script>
<script src="/js/skuLookup.js"></script>